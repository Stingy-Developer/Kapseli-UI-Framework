{
  "compilerOptions": {
    "jsx": "react",
    "module": "es2015",
    "esModuleInterop": true,
    "target": "es5",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    // "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "reactNamespace": "JSX",
    "declarationDir": "./dist/bundle/@types",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "lib": [
    "es2015"
  ],
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}